---
import '@fontsource-variable/onest';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-[#050505] flex flex-col min-h-screen relative">
    <Header />
    <main class="max-w-screen-xl mx-auto w-full px-4 flex-grow">
      <slot />
    </main>
    <div class="fixed inset-0 -z-10 w-full h-full bg-[radial-gradient(125%_125%_at_50%_10%,#000_40%,#63e_100%)]"></div>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }


  html {
    font-family: "Onest Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  body {
    background-color: #050505; 
    color: #ffffff; 
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  
  @media(prefers-reduced-motion: reduce) {
    html {
      scroll-behavior: auto;
    }
  }


  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  html, body {
    overflow-x: hidden;
  }

  @media (prefers-color-scheme: dark) {
    body {
      background-color: #050505; 
      color: #ffffff; 
    }
  }

  @media (prefers-color-scheme: light) {
    body {
      background-color: #f5f5f5; 
      color: #000000; 
    }
  }

</style>
