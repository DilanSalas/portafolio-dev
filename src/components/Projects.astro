        name: 'Firebase',
        class: "bg-white text-black dark:bg-black dark:text-white border border-black dark:border-white hover:bg-black hover:text-white dark:hover:bg-white dark:hover:text-black transition-all duration-200 ease-in-out",
        icon: Firebase,
    },

    

}

const projects = [
  {
    title: 'TapNServe',
    description: 'A restaurant management system designed to streamline operations and enhance the dining experience. Customers can browse menus, place pre-orders, and request assistance, while waitstaff manage tables and receive real-time notifications. The kitchen benefits from live order tracking and instant communication with the staff. ',
    link: 'http://TapNServe.click',
    github: 'https://github.com/ZarateBM/ClientTapNServe',
    image:'/TapNServe.png',
    tags: [TAGS.REACT, TAGS.SOCKETIO, TAGS.NESTJS, TAGS.NODEJS]
  },
  {
    title: 'Point of Sale',
    description: 'This point of sale (POS) system developed with Windows Forms is designed to efficiently manage sales, inventory, and customer operations in a retail business environment. The integration with SAP Business One allows for the synchronization of key data, such as inventory, transactions, and administrative reports, ensuring a centralized and automated flow of information. ',
    link: 'https://github.com/DilanSalas/PointOfSale',
    github: 'https://github.com/DilanSalas/PointOfSale',
    image:'/PointOfSale.png',
    tags: [TAGS.NET, TAGS.C]
  },
  {
    title: 'TimeGrid',
    description: 'TimeGrid is an online calendar for efficient event and task management. It offers a modern interface with multiple views and customization options, including color selection for events. Users can easily create, edit, and organize their schedules while enabling collaboration with shared event management.',
    link: 'https://time-grid.vercel.app/',
    github: 'https://github.com/DilanSalas/TimeGrid',
    image:'/TimeGrid.png',
    tags: [TAGS.REACT, TAGS.NODEJS, TAGS.EXPRESS]
  },
  {
    title: 'SmileNotes',
    description: 'SmileNotes is a digital journaling app focused on promoting mental well-being through daily emotional check-ins and guided reflections. It offers users a private, supportive space to write about their thoughts, track moods, and develop self-awareness. With user-friendly prompts, mindfulness reminders, and inspiring messages, SmileNotes encourages healthy journaling habits that support emotional resilience and personal growth. Whether youre managing anxiety, coping with stress, or simply cultivating positivity, SmileNotes is your companion for better mental healthâ€”one note at a time.',
    link: 'https://smile-notes-dilansalas-projects.vercel.app/',
    github: 'https://github.com/DilanSalas/journal-app',
    image:'/SmileNotes1.png',
    tags: [TAGS.REACT, TAGS.NODEJS, TAGS.FIREBASE]
  },

]
---
{
    projects.map(({ title, description, link, github, image, tags }, index) => (
      <article class="flex flex-col gap-4 mb-8">
        <h3 class="text-2xl font-semibold">{title}</h3>
        <p class="text-lg text-pretty"
          data-i18n={`${index}descriptionP`}
        >{description}</p>
        
        <ul class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <li class={`inline-flex items-center gap-2 ${tag.class} rounded-full py-1 px-3`}>
              <tag.icon class="size-6" />
              <span class="text-xs font-medium">{tag.name}</span>
            </li>
          ))}
        </ul>
  
          {image && (
            <img
              class="rounded shadow-2xl shadow-white/10"
              src={image}
              alt={`Screenshot of ${title} project`}
            />
          )}
        <div class="flex gap-4">
          <a
            href={link}
            class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium transition bg-white/5 rounded-full hover:scale-110 hover:bg-white/10"
            target="_blank"
            rel="noopener noreferrer"
          >
            <svg 
              class="size-4"
              xmlns="http://www.w3.org/2000/svg" 
              width="24" 
              height="24" 
              viewBox="0 0 24 24" 
              fill="none" 
              stroke="currentColor" 
              stroke-width="2" 
              stroke-linecap="round" 
              stroke-linejoin="round"
            >
              <path d="M10 13a5 5 0 0 0 7.54.54l3-3a5 5 0 0 0-7.07-7.07l-1.72 1.71" />
              <path d="M14 11a5 5 0 0 0-7.54-.54l-3 3a5 5 0 0 0 7.07 7.07l1.71-1.71" />
            </svg>
           <h1 data-i18n="VisitProject">Visit Project</h1>
          </a>
          
          <a
          href={github}
          class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium transition bg-white/5 rounded-full hover:scale-110 hover:bg-white/10"
          target="_blank"
          rel="noopener noreferrer"
          

        >
          <svg 
            class="size-4"
            xmlns="http://www.w3.org/2000/svg" 
            width="24" 
            height="24" 
            viewBox="0 0 24 24" 
            fill="none" 
            stroke="currentColor"
            stroke-width="2" 
            stroke-linecap="round" 
            stroke-linejoin="round"
          >
            <path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4" />
            <path d="M9 18c-4.51 2-5-2-7-2" />
          </svg>
          <h1 data-i18n="ViewCode">View Code</h1>
        </a>
        </div>
  
      </article>
    ))
  }