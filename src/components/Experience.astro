---
import ExperienceItem from './ExperienceItem.astro'
import { t } from '../i18n'
import type { Lang } from '../i18n'

const lang: Lang = Astro.url.pathname.startsWith('/en') ? 'en' : 'es'

const experience = [
  t(lang, 'experience.itekIntern'),
  t(lang, 'experience.itekEngineer')
]
---

<ol>
  {experience.map(item => (
    <ExperienceItem {...item} />
  ))}
</ol>
